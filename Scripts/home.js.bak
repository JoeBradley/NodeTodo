"use strict";

/* Home */

$.get("http://localhost:3000/tasks", function (data) {
    var _this = this;

    console.log(data);

    var tasks = data.map(function (task) {
        return React.createElement(
            "li",
            { key: task._id },
            React.createElement("label", null, task.name),
            React.createElement("input", {
                type: "checkbox",
                onClick: statusOnClick
            })
        );
    });

    ReactDOM.render(
        React.createElement("ul", null, tasks),
        document.getElementById("root")
    );
});

function statusOnClick(e) {
    console.log("Clicked");

    this.setState(function (prevState) {
        return {
            status: "completed"
        };
    });
    $.ajax({
        url: "http://localhost:3000/tasks/" + this._id,
        method: "PUT",
        data: this
    });
}
